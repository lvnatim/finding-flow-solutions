{% if matrixBlock.mainContent and matrixBlock.secondaryContent %}
<section>
    <div class="container my-12 md:my-16">
        <div class="flex flex-wrap md:flex-nowrap gap-x-10">
            <div class="w-full md:w-1/2">{{ matrixBlock.mainContent }}</div>
            <div class="w-full md:w-1/2">{{ matrixBlock.secondaryContent }}</div>
        </div>
    </div>
</section>
{% elseif matrixBlock.mainContent %}
<section>
    <div class="container my-12 md:my-16">
        <div class="w-full md:w-2/3 lg:w-7/12 {{ matrixBlock.alignment == 'left' ? '' : 'mx-auto text-center' }}">
            {% if matrixBlock.heading %}<h2>{{ matrixBlock.heading }}</h2>{% endif %}
            {{ matrixBlock.mainContent }}
            {% if matrixBlock.href %}<a class="btn" href="{{ matrixBlock.href }}"><span>{{ matrixBlock.label ? matrixBlock.label : 'Go to Purchase' }}</span></a>{% endif %}
        </div>
    </div>
</section>
{% endif %}