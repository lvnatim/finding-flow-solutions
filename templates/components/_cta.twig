<section>
    <div class="container my-12 md:my-16 lg:my-20 xl:my-24">
        <div class="border-blend">
            <div class="border border-white border-4 flex flex-wrap overflow-visible justify-between">
                <div class="relative w-full md:w-1/2 py-4 lg:py-12">
                    <div class="w-full lg:w-3/4 mx-auto px-5 lg:px-0">
                        {% if matrixBlock.heading %}
                            <p class="h2 mb-3">{{ matrixBlock.heading }}</p>
                        {% endif %}
                        {% if matrixBlock.subheading %}
                            <p class="h3">â€” {{ matrixBlock.subheading }}</p>
                        {% endif %}
                    </div>

                    {% set image = matrixBlock.image.one() %}
                    {% if matrixBlock.icon|length %}
                        {% set icon = matrixBlock.icon.one() %}
                        <div class="relative md:absolute md:left-full md:-bottom-8 lg:-bottom-12 xl:-bottom-16 w-full md:w-5/6 md:-ml-24 lg:-ml-28 xl:-ml-32 -mb-12 z-10">
                            <img src="{{ icon.url }}" alt="{{ icon.alt }}"/>
                        </div>
                    {% endif %}
                </div>
                <div class="w-full md:w-1/2 bg-right md:bg-center bg-cover relative rounded-bl-[20px] md:rounded-bl-none md:rounded-tr-[20px] rounded-br-[20px] h-[300px] md:h-auto" style="background-image:url({{ image ? image.url }})"></div>
            </div>
        </div>
    </div>
</section>