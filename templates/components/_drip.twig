{% set id   = '' %}
{% set tag  = '' %}
{% switch matrixBlock.dripForm.value %}
    {% case 'middleSchool' %}
        {% set id   = '556767811' %}
        {% set tag  = 'Finding Flow: Middle School Interest' %}
    {% default %}
        {% set id   = '614923652' %}
        {% set tag  = 'Finding Flow: Elementary Interest' %}
{% endswitch %}
<section>
    <div class="container my-20">
        <div class="border-blend w-5/6 mx-auto">
            <div class="flex items-center py-3 px-6 gap-8">
                <div class="md:w-5/12 lg:w-1/2">
                    <p class="lead mb-0">{{ matrixBlock.heading }}</p>
                </div>
                <div class="md:w-7/12 lg:w-1/2 mt-4 md:mt-0">
                    <form class="drip-form" action="https://www.getdrip.com/forms/{{ id }}/submissions" data-drip-embedded-form="{{ id }}" id="drip-ef-{{ id }}" method="post" data-drip-id="{{ id }}">
                        <label for="dripEmail" class="flex gap-2">
                            <input id="dripEmail" type="email" name="fields[email]" placeholder="Your Email Address">
                            <button class="btn shrink-0"><span>Sign Up</span></button>
                        </label>
                        <input type="hidden" name="website" value="{{ entry.url }}">
                        <input type="hidden" name="tags[]" id="tags_" value="{{ tag }}" tabindex="-1">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
